<!DOCTYPE html>

<html lang="en">
<head>
	<link rel="stylesheet" href="/css/normalize.css">
	<link rel="stylesheet" href="/css/style.css">
	<title> <%= title %> </title>
</head>
<body>
	<div id="nav">
		<a href="/new">New Recipe</a>
		<a href="/logout">Logout</a>
	</div>
	<p>
	<div id="showrecipes">
		<% if (lgth>0) {%>
			<% myrecipes.forEach(function(item) { %>
				<div class="recipe" id="<%= item._id %>">
					Date: <%= item.date %>
					<p>
					Name: <%= item.dishname %>
					<p>								
					Recipe: <%= item.recipe %>
					<p>
					Notes: <%= item.notes %>
					<p>
					<a href="/edit/<%= item._id %>">Edit</a>
					<a href="/delete/<%= item._id %>">Delete</a>
				</div>
				<p>
			<% }) %>
		<% } %>
		<% if (lgth == 0) { %>
			<p>
			No recipes yet!
			<p>
		<% } %>
	</div>
</body>
</html>
